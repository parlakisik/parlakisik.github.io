{
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-inline-style": "off",
    "no-raw-characters": "off",
    "require-sri": "off",
    "script-type": "off"
  },
  "elements": {
    "html": {
      "required-attributes": ["lang"]
    },
    "meta": {
      "required-attributes": ["charset", "name", "content"]
    }
  }
}
